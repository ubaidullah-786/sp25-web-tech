<!-- views/layout/adminLayout.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Panel</title>
  </head>
  <body>
    <nav class="admin-nav">
      <div class="nav-left">
        <a
          href="/admin/products"
          class="<%= typeof activeTab !== 'undefined' && activeTab === 'products' ? 'active' : '' %>"
          >Products</a
        >
        <a
          href="/admin/orders"
          class="<%= typeof activeTab !== 'undefined' && activeTab === 'orders' ? 'active' : '' %>"
          >Orders</a
        >
      </div>
      <a href="/logout" class="btn btn-danger" style="color: white">Logout</a>
    </nav>

    <main class="admin-main">
      <div class="admin-card">
        <!-- Flash Messages -->
        <% if (typeof messages !== 'undefined') { %>
        <div class="flash-messages">
          <% if (messages.success) { %>
          <div class="alert alert-success"><%= messages.success %></div>
          <% } %> <% if (messages.danger) { %>
          <div class="alert alert-danger"><%= messages.danger %></div>
          <% } %>
        </div>
        <% } %> <%- body %>
      </div>
    </main>
  </body>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html {
      font-size: 62.5%;
    }

    body {
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI',
        Roboto, sans-serif;
      font-size: 1.6rem;
      line-height: 1.6;
      color: #1f2937;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
    }

    .admin-nav {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      padding: 1.5rem 3rem;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      display: flex;
      justify-content: space-between;
      align-items: center;
      border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .admin-nav .nav-left {
      display: flex;
      gap: 3rem;
    }

    .admin-nav a {
      color: #374151;
      text-decoration: none;
      font-weight: 500;
      padding: 1rem 2rem;
      border-radius: 0.8rem;
      transition: all 0.3s ease;
      position: relative;
    }

    .admin-nav a:hover {
      background: rgba(102, 126, 234, 0.1);
      color: #667eea;
      transform: translateY(-2px);
    }

    .admin-nav a.active {
      background: #667eea;
      color: white;
    }

    .admin-main {
      max-width: 120rem;
      margin: 4rem auto;
      padding: 0 3rem;
    }

    .admin-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border-radius: 1.6rem;
      padding: 3rem;
      box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
      border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .admin-title {
      font-size: 2.8rem;
      font-weight: 700;
      color: #1f2937;
      margin-bottom: 3rem;
      text-align: center;
    }

    .btn {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 1.2rem 2.4rem;
      border: none;
      border-radius: 0.8rem;
      font-size: 1.4rem;
      font-weight: 500;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      transition: all 0.3s ease;
      text-align: center;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
    }

    .btn-danger {
      background: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
    }

    .btn-danger:hover {
      box-shadow: 0 8px 25px rgba(239, 68, 68, 0.3);
      color: black !important;
    }

    .btn-success {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    }

    .btn-success:hover {
      box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
    }

    /* Flash Messages */
    .flash-messages {
      margin-bottom: 2rem;
    }

    .alert {
      padding: 1.5rem 2rem;
      border-radius: 0.8rem;
      margin-bottom: 1rem;
      font-weight: 500;
    }

    .alert-success {
      background: rgba(16, 185, 129, 0.1);
      color: #065f46;
      border: 1px solid rgba(16, 185, 129, 0.2);
    }

    .alert-danger {
      background: rgba(239, 68, 68, 0.1);
      color: #991b1b;
      border: 1px solid rgba(239, 68, 68, 0.2);
    }
  </style>
</html>
