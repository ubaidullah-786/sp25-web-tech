    font-size: 1.2rem;
    margin-top: 0.5rem;
    min-height: 1.5rem;
  }

  /* Password requirements banner */
  .password-requirements {
    position: absolute;
    top: 100%;
    right: 0;
    margin-top: 0.5rem;
    padding: 1rem;
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 0.4rem;
    box-shadow: 0 0.2rem 0.8rem rgba(0, 0, 0, 0.15);
    font-size: 1.2rem;
    width: 280px;
